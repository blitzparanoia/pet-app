<%= form_for(@job) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :job_type %>
    <%= f.select :position, ['Full Time', 'Part Time', 'Volunteer', 'Internship', 'Temporary', 'Carpe Diem']%>

    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>

    <br>
    <%= f.label :contact_number %>
    <%= f.text_field :phone_number %>
    <br>

    <br>
    <%= f.label :company_id, "Select a company" %>
    <%= f.collection_select :company_id, Company.all, :id, :name, prompt: true %>
    <br><br>


  <% if !params[:company_id] %>
    <h4>Add New Company Info:</h4>

    <%= f.fields_for :company do |c|%>
    <br>
        <%= c.label :name %>
        <%= c.text_field :name %>
  <br>
        <%= c.label :years_in_business %>
        <%= c.text_field :age %>
  <br>
        <%= c.label :motto %>
        <%= c.text_area :motto %>
    <% end %>
  <% end %>
  <br>
    <%= f.submit %>
  <% end %>
